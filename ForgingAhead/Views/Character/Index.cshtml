@model List<ForgingAhead.Models.Character>

@section header{
	 <meta name="description" context="Lists all program rewards in your wallet" >
}

<h2>All Rewards Program</h2>

<a asp-controller="Character" asp-action="Create">Create new program</a>

<ul>
	@foreach (var c in Model){
		 <li>
		 <a asp-action="Details" asp-controller="Character" asp-route-id="@c.Id">
		    @c.Name
		 </a></li>
		 }
</ul>


<table class="table">
       <thread><tr>
	<th>Program</th>
	<th>Rewards Points</th>
	<th>Action</th>
	</tr></thread>
	@foreach (var c in Model){
		 <tr>
			<td>@c.Name</td>
			<td>@c.TotalRewards</td>
		<td>
			<a asp-action="Edit" asp-route-id="@c.Id">Edit</a> |
			<a asp-action="Details" asp-route-name="@c.Name">Details</a> |
			<a asp-action="Delete" asp-route-name="@c.Name">Delete</a>
		</td>
		</tr>
		}
